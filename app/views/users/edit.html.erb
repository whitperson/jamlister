
<h1>edit profile</h1>
<%= form_for @auth, :url => '/profile' do |f| %>
  <div class='field'>
    <%= label_tag :name %>
    <%= f.text_field :name %>
  </div>

  <div class='field'>
    <%= label_tag :password %>
    <%= f.password_field :password %>
  </div>
  <div class='field'>
    <%= label_tag :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>
  <div class='field'>
    <%= f.submit %>
  </div>
<% end %>
<h1 class="grid4 offset1">Login</h1>
<%= form_tag do %>
  <div class='field'>
    <%= label_tag 'name' %>
    <%= text_field_tag 'name' %>
  </div>
  <div class='field'>
    <%= label_tag 'password' %>
    <%= password_field_tag 'password' %>
  </div>
  <div class='field'>
    <%= submit_tag 'Login', :class => 'btn btn-inverse' %>
  </div>
<% end %>
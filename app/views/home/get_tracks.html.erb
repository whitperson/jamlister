
<div id="search" class="row">
  <div class="span12">
    <h3>All Tracks From Selected Concert:</h3>
</div>

  <div id="get_tracks" class="row">
    <ul>
      <% @tracks.each do |track| %>
        <li>
          <div class="span4">
            <h4> <%= link_to track.title, track.url %> </h4>
          </div>
          <div class="span4">
            <%= audio_tag track.url, :controls => true %>
         </div>

          <div class="span4">
          <%= form_tag '/songs/new' do %>
            <% params[:name] = track.title %>
            <% params[:audio_link] = track.url %>
            <%= hidden_field_tag 'audio_link', params[:audio_link] %>
            <%= hidden_field_tag 'name', params[:name] %>
            <%= submit_tag 'Use this track', :class => 'btn btn-inverse' %>
          <% end %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
<div class="form">

<%= form_for @artist, :html => {:multipart => true} do |f| %>

  <div class='field'>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <h3>Image:</h3>
  <div class='field'>
    <%= f.label :local %>
    <%= f.file_field :photo %>
  </div>
  <div class='field'>
    <%= f.label :remote %>
    <%= f.text_field :remote_photo_url %>
  </div>
  <div class='field'>
    <%= f.hidden_field :photo_cache %>
    <%= image_tag(@artist.photo.small.url) if @artist.photo? %>
  </div>

  </div>
  <div class='field'>
    <%= f.submit :class => 'btn btn-inverse' %>
  </div>
<% end %>
</div>